{
    "name": "@inclusivelint/inclusivelint",
    "version": "1.0.0",
    "description": "Inclusivelint action based on inclusivelint/inclusivelint-lib",
    "main": "./dist/pkg-index.js",
    "bin": {
        "inclusivelint": "dist/index.js"
    },
    "types": "dist/pkg-index.d.ts",
    "scripts": {
        "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
        "create": "npm run build && npm run test",
        "build": "tsc -p .",
        "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Doist/inclusivelint.git"
    },
    "author": "Doist",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Doist/inclusivelint/issues"
    },
    "homepage": "https://github.com/Doist/inclusivelint",
    "devDependencies": {
        "@types/clear": "^0.1.1",
        "@types/commander": "^2.12.2",
        "@types/figlet": "^1.5.1",
        "@types/node": "^15.0.1",
        "@types/yargs": "^16.0.1",
        "nodemon": "^2.0.7",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4",
    },
    "dependencies": {
        "chalk": "^4.1.1",
        "clear": "^0.1.0",
        "commander": "^7.2.0",
        "figlet": "^1.5.0",
        "fs": "0.0.1-security",
        "glob": "^7.1.6",
        "http": "^0.0.1-security",
        "ora": "^5.4.0",
        "path": "^0.12.7"
    }
}
