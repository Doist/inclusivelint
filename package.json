{
    "name": "@inclusivelint/inclusivelint",
    "version": "1.0.0",
    "description": "Inclusivelint action based on inclusivelint/inclusivelint-lib",
    "main": "./dist/index.js",
    "bin": {
        "inclusivelint": "dist/index.js"
    },
    "types": "dist/pkg-index.d.ts",
    "scripts": {
        "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
        "build": "tsc",
        "format": "prettier --write **/*.ts",
        "format-check": "prettier --check **/*.ts",
        "lint": "eslint src/**/*.ts",
        "package": "ncc build --source-map --license licenses.txt"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Doist/inclusivelint.git"
    },
    "author": "Doist",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Doist/inclusivelint/issues"
    },
    "homepage": "https://github.com/Doist/inclusivelint",
    "devDependencies": {
        "@types/clear": "^0.1.1",
        "@types/commander": "^2.12.2",
        "@types/glob": "^7.1.3",
        "@types/node": "^15.0.1",
        "@types/yargs": "^16.0.1",
        "nodemon": "^2.0.7",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4",
        "@actions/core": "^1.2.7",
        "@vercel/ncc": "^0.28.4",
        "eslint": "^7.25.0",
        "eslint-plugin-github": "^4.1.3",
        "prettier": "2.2.1",
        "@doist/eslint-config": "^3.0.0",
        "@doist/prettier-config": "^3.0.5"
    },
    "dependencies": {
        "chalk": "^4.1.1",
        "clear": "^0.1.0",
        "commander": "^7.2.0",
        "fs": "0.0.1-security",
        "glob": "^7.1.6",
        "http": "^0.0.1-security",
        "ora": "^5.4.0",
        "path": "^0.12.7"
    },
    "prettier": "@doist/prettier-config"
}
